<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.scoreboard">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="EveryGame"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoreBoard"
        tools:targetApi="31">
        <activity
            android:name=".UserRankActivity"
            android:exported="false" />
        <activity
            android:name=".GameRankActivity"
            android:exported="false" />
        <activity
            android:name=".TotalRankActivity"
            android:exported="false" />
        <activity
            android:name=".InGameActivity"
            android:exported="false" />
        <activity
            android:name=".ShowRankActivity"
            android:exported="false" />
        <activity
            android:name=".MainGameActivity"
            android:exported="false" />
        <activity
            android:name=".AddUserActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>